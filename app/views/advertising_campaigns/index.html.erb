<p id="notice"><%= notice %></p>

<h1>Listing Advertising Campaigns</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Info</th>
      <th>Date</th>
      <th>Image</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advertising_campaigns.each do |advertising_campaign| %>
      <tr>
        <td><%= advertising_campaign.name %></td>
        <td><%= advertising_campaign.info %></td>
        <td><%= advertising_campaign.date %></td>
        <td><%= image_tag(advertising_campaign.avatar, :width => 50) %></td>
        <td><%= advertising_campaign.product.name %></td>
        <td><%= link_to 'Show', advertising_campaign %></td>
        <td><%= link_to 'Edit', edit_advertising_campaign_path(advertising_campaign) %></td>
        <td><%= link_to 'Destroy', advertising_campaign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

