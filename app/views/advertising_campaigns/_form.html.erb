<div class="container">
  <div class="row">



<%= form_for(@advertising_campaign, :multipart => true) do |f| %>
  <% if @advertising_campaign.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@advertising_campaign.errors.count, "error") %> prohibited this advertising_campaign from being saved:</h2>

      <ul>
      <% @advertising_campaign.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field col s9">
    <%= f.label :Nombre, class: 'black-text' %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field col s9">
    <%= f.label :Descripcion, class: 'black-text' %><br>
    <%= f.text_field :info %>
  </div>
  <div class="field col s9">
    <%= f.label :Fecha, class: 'black-text' %><br>
    <%= f.date_select :date %>
  </div>

        <div class="field col s9">
          <%= f.label :product_id, class: 'black-text' %>
          <%= f.select :product_id, options_for_select(@products.map{|p| [p.name, p.id]}, required: true, class: 'col s8') %>
        </div><br>

    <div class="field col s9">
    <%= f.label :Imagen, class: 'black-text' %><br>

    <%= f.file_field :avatar,  :onchange => 'readURL(this)'%>


    </div>


        <div class="actions row ">
          <div class="col s12 center">
            <%= f.submit "Registrar"  , class: 'waves-effect waves-light btn ' %>
            <a class="btn waves-effect waves-light" <%= link_to 'Atras', advertising_campaigns_path %></a>
          </div>
        </div>

        <div style="margin-left: 800px; margin-top: -438px;">
          <img id="img_prev"/>
        </div>

  <% end %>


  </div>
</div>

<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#img_prev')
                        .attr('src', e.target.result)
                        .width(250)
                        .height(250);
            };

            reader.readAsDataURL(input.files[0]);
        }
    }
</script>

