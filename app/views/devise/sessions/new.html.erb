<div style="background-image: url(<%= asset_path 'images/fondo.jpg' %>) !important;
  background-size: cover !important;">
<h2 class="gray center-align">Inicio Sesion</h2>
<div class="container">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="input-field">
     <i class="material-icons prefix iconnegro">email</i>
    <%= f.label :email , class: 'black-text'%><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="input-field">
  <i class="material-icons prefix iconnegro">lock</i>
    <%= f.label :password, class: 'black-text'%><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="input-field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div><br>
  <% end -%>
      <div class="input-field">
        <%= f.submit "Iniciar Sesion" , class: 'waves-effect waves-light btn col s3' %>
            <%= link_to "Facebook", "/users/auth/facebook", id: "sign_in", class: 'waves-effect waves-light btn col s3 blue darken-2', style: 'color: #fff;' %>
        </div>
<% end %>
</div>
<%= render "devise/shared/links" %>

</div>
